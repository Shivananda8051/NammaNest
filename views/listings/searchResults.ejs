<% layout("layouts/boilerplate") %>

<div class="container mt-5">
  <h2 class="mb-4">Search Results for "<%= query %>"</h2>

  <% if (listings.length===0) { %>
  <div
    class="d-flex flex-column align-items-center justify-content-center p-5 mt-5 bg-light rounded shadow-sm animate__animated animate__fadeInDown mb-3"
  >
    <img
      src="https://cdn-icons-png.flaticon.com/512/7486/7486817.png"
      alt="Not found"
      width="120"
      class="mb-4 animate__animated animate__pulse animate__infinite"
    />
    <h4 class="text-danger mb-2 animate__animated animate__fadeInUp">
      No Hotels Found
    </h4>
    <p class="text-muted text-center">
      We couldn't find any listings that match "<strong> <%= query %> </strong
      >".<br />
      Try searching with different keywords or adjust your filters.
    </p>
    <a
      href="/listings"
      class="btn edit-btn mt-3 animate__animated animate__fadeInUp"
    >
      Back to All Listings
    </a>
  </div>
  <% } else { %>
  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 g-3 mt-3">
    <% for (let listing of listings) { %>
    <a
      href="/listings/<%= listing._id %>"
      class="listing-link text-decoration-none text-dark"
    >
      <div class="col d-flex">
        <div class="card h-100 listing-card" style="width: 100%">
          <% if (listing.image && listing.image.url) { %>
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing image"
            style="height: 15rem; object-fit: cover"
          />
          <% } else { %>
          <img
            src="https://via.placeholder.com/300x200?text=No+Image"
            class="card-img-top"
            alt="No image"
            style="height: 15rem; object-fit: cover"
          />
          <% } %>
          <div class="card-img-overlay"></div>
          <div class="card-body d-flex flex-column justify-content-between">
            <p class="card-text mb-0">
              <b> <%= listing.title %> </b><br />
              â‚¹<%= listing.price.toLocaleString("en-IN") %> / night
            </p>
          </div>
        </div>
      </div>
    </a>
    <% } %>
  </div>
  <% } %>
</div>
