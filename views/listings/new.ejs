<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br> 
    <h1>Add A New Hotel</h1>
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
            <label for="title" class="form-label">Title</label>

            <input type="text" placeholder="Add a Classy Title" name="listing[title]" class="form-control" required>
            <div class="valid-feedback">Title Looks Good</div>
            <div class="invalid-feedback">Please add Title</div>
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required
            ></textarea> 
            <div class="invalid-feedback">Please add description</div>
        </div>
        <div>
            <label for="image" class="form-label" col-4 >Upload Listing Image</label>
            <input type="file" name="listing[image]" class="form-control" required>
            <div class="invalid-feedback">Please add image</div>
        </div>
        <div class="row">
            <div class="mb-3 col-4 mt-2">
            <label for="price" class="form-label">Price</label>
            <input placeholder="1500" type="text" name="listing[price]" class="form-control" required>
            <div class="invalid-feedback">Please add price</div>
        </div>
        <div class="mb-3 col-4 md-8 mt-2">
            <label for="country" class="form-label">Enter Country</label>
            <input type="text" placeholder="India" name="listing[country]" class="form-control" required>
            <div class="invalid-feedback">Please add country</div>
        </div>
        </div>
        <div>
            <label for="location" class="form-label">Enter Location</label>
            <input type="text" placeholder="Kalaburagi" name="listing[location]" class="form-control" required>
            <div class="invalid-feedback">Please add Location</div>
        </div>
        
        <br> <br>
        <button class="btn btn-dark add-btn">Add</button>
        <br> <br>
    </form>
    </div>
</div>